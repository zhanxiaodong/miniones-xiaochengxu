/* pages/babyInfo/babyInfo.wxss */
page {
  height: 100%;
}

.weui-navbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  position: absolute;
  z-index: 500;
  top: 0;
  width: 100%;
}

.weui-navbar__item {
  position: relative;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 13px 0;
  text-align: center;
  font-size: 0;
  color:#999999;
}
.weui-navbar__item:first-child{
  text-align: right;
  padding-right: 5px;
}
.weui-navbar__item:first-child:after{
  border: 2px sold #999999;
}
.weui-navbar__item:last-child{
  text-align: left;
  padding-left: 5px;
}

.weui-navbar__item.weui-bar__item_on {
  color: #333333;
  font-weight: 800;
}

.weui-navbar__slider {
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 6em;
  height: 3px;
  background-color: #04B8A0;
  -webkit-transition: -webkit-transform 1s;
  transition: -webkit-transform 1s;
}

.weui-navbar__title {
  display: inline-block;
  font-size: 16px;
  max-width: 8em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}

.weui-tab__content {
  text-align: center;
}

