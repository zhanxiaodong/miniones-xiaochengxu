/* pages/awardexame/awardexame.wxss */
page {
   background-color: #f6f8f7;

}

.wrap {
   margin: 20rpx;
}

.award-img {
  width: 710rpx;
  height: 312rpx;
}

.award-list {
  display: flex;
  flex-flow: row nowrap;
  margin: 20rpx;
}

.award-index {
  width: 100rpx;
  line-height: 38rpx;
  background-color: #F0ECE5;
  font-size: 16rpx;
  color: #000000;
  border-radius: 20px;
  text-align: center;
}

.award-detail {
  color: #000000;
  font-size: 28rpx;
  padding-left: 30rpx;
}

.award-rule {
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.award-rule-title {
  width: 72rpx;
  margin-left: 20rpx;
}

.award-rule-describe {
  display: flex;
  flex-direction: column;
  width: 500rpx;
}

.award-rule-title,.award-rule-describe {
  font-size: 24rpx;
  color: #333;
}

.award-time {
  color: #999999;
  font-size: 24rpx;
  margin: 40rpx 0 40rpx 40rpx;
}

.line {
  width: 335px;
  height: 1px;
  background-color: #f2f2f2;
  margin: 0 20rpx;
}

.award-count {
  display: flex;
  flex-flow: row nowrap;
}

.award-count-math {
  font-size: 24rpx;
  color: #999999;
}

.award-count-look {
  color: #D6BC8A;
  font-size: 24rpx;
}

.line-qzone {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-around;
  height: 404rpx;
}

.award-circle {
  height: 220rpx;
  width: 220rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  
}

.award-share {
  display: flex;
  flex-flow: row nowrap;
  position: fixed;
  bottom: 20rpx;
}

.award-share-button {
  width: 342rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #04B8A0;
  text-align: center;
  border: 1px solid #04B8A0;
  margin-left: 10px;
}

.espacial {
  background-color: #04B8A0;
  color: #fff;
  border: 1px solid #fff;
}

.footer-one,.footer-two {
  padding: 50rpx 40rpx;
}

.footer-title{
  color: #000000;
  font-size: 28rpx;
}

.footer-content{
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #333333;
}

.footer-img {
  width: 200rpx;
  height: 120rpx;
}

 /*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.8;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  height: 472rpx;
  width: 550rpx;
  position: fixed;
  bottom: 380rpx;
  left: 100rpx;
  z-index: 2000;
  background: #fff;
  border-radius: 10px;
}

.something-pay {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.button-choice {
color:#333333;
background-color:#f6f8f7;
border-radius:20px;
width: 400rpx;
line-height:66rpx;
font-size: 28rpx;
}

.button-choice:hover {
  color:#ffffff;
background-color:#04B8A0;
border: none;
}
.butBoxs{
  width:100%;
  height:700rpx;
  position: fixed;bottom:0;
  z-index:9999;
  background: #fff;
}
.butBoxs button{
  height:100rpx;

}
