<view class="page">
  <view class='flexcs font14'>
    <view class='flex1 textleft gray2-color'>优惠券</view>
    <view class='gray1-color'>使用规则</view>
  </view>
  <view class='coupon-cs' wx:if="{{!pick}}" wx:for="{{coupons}}" wx:key="id">
    <view class="flexcs pt10 gray1-color">
      <view class="card-left">
        <view>
          <text class='coupon-title'>会员专享 {{item.typeDesc}}</text>
        </view>
        <view>
          <text class='coupon-desc'>有效期至{{item.effect}}</text>
        </view>
      </view>
      <view class="card-right ">
        <text class='font30'>{{item.amount}}</text>
        <text>元</text>
      </view>
    </view>
    <view class="bottom-desc">感谢您体验MINIANYS,使用本券立减{{item.amount}}元
    </view>
  </view>
  <view wx:if="{{pick}}">
    <radio-group bindchange="radioChange">
      <label wx:for="{{coupons}}" wx:key="id">
        <view class='coupon-cs'>
          <view class="flexcs pt10 gray1-color">
            <view class="card-left">
              <view>
                <text class='coupon-title'>会员专享 {{item.typeDesc}}</text>
              </view>
              <view>
                <text class='coupon-desc'>有效期至{{item.effect}}</text>
              </view>
            </view>
            <view class="card-right ">
              <text class='font30'>{{item.amount}}</text>
              <text>元</text>
            </view>
          </view>
          <view class="bottom-desc">
            <text>感谢您体验MINIANYS,使用本券立减{{item.amount}}元</text>
            <radio class="coupon-check" value="{{item.id}}" checked="{{item.checked}}" />
          </view>

        </view>
      </label>
    </radio-group>
  </view>
</view>