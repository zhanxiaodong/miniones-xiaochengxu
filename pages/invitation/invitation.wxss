page {
  background-color: #ffffff;
  height: 100%;
}

.page {
  display: flex;
  flex-direction: column;
  height: 85%;
  text-align: center;
}

.btncs {
  background-color: rgb(38, 174, 168);
  color: #fff;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.8;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  width: 88%;
  overflow: hidden;
  position: fixed;
  top: 10%;
  left: 6%;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  border-radius: 5px;
  min-height: 400px;
}