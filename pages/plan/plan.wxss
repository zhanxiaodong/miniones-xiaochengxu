page {
    background-color: #fff;
    height: 100%;
  }
  
  .page {
    height: 100%;
    display: flex;
    flex-direction: column;
    padding: 0 30px;
  }
  
  .rowf {
    flex: 1;
    padding: 0 15%;
    display: flex;
    align-items: center;
  }
  
  .rowf button.rcs {
    background-color: #008c8c;
    color: #fff;
    width: 100px;
    right: 0;
    position: fixed;
    margin-right: 15%;
  }
  
  button.lcs {
    background-color: #fff;
    color: #008c8c;
    width: 100px;
    left: 0;
    position: fixed;
    margin-left: 15%;
  }
  
  button.lcs::after {
    border: none;
  }
  
  .weui-grids {
    position: relative;
    overflow: hidden;
  }
  
  .weui-grid {
    position: relative;
    float: left;
    padding: 20px 10px;
    width: 33.33333333%;
    box-sizing: border-box;
    text-align: center;
  }
  
  .textV {
    font-size: 14px;
    width: 32px;
    height: 32px;
    border-radius: 20px;
    margin: 0 auto;
    text-align: center;
    background-color: #fff;
    padding: 8px;
  }
  
  .weui-grid text.active {
    color: #fff;
    border: 1px solid #008c8c;
    background-color: #008c8c;
  }
  
  radio-group .unactive {
    border: 1px solid;
  }
  
  radio-group .active {
    background-color: #008C8C;
    color: #ffffff;
  }
  
  .btncon {
    background-color: #008c8c;
    border-radius: 32px;
    border: 1px solid #008c8c;
    color: #fff;
  }
  
