/*  确认支付订单弹窗 */
/* 遮罩层 */
.mark{
  position:fixed;top:0;left:0;right:0;bottom:0;
  background:rgba(30, 30, 30, 0.3);
}
.payBox{
  width:100%;
  height:600rpx;
  border-top:solid 1px #f3f3f3;
  position: fixed;bottom:0;
  background: #fff;
  padding:0 30rpx;
  font-size:34rpx;
  color:#c3c3c3;
}
.payTop{
  width:100%;
  height:120rpx;
  line-height: 120rpx;
  border-bottom:solid 1px #f3f3f3;
}
.payTop .left text{
    font-size:44rpx;
    color:#000;
    font-weight: 600;
}
.payTop .right{
  color:red;
}
.payBox .left{
  width:60%;
  float:left;
}
.payBox .right{
  text-align: right;
  width:40%;
  float:left;
}
.pay{
  padding:30rpx 0;
}
.pay .paySon{
  line-height:80rpx;
}
.payBot text{
  font-size:50rpx;
  font-weight: 600;
  color:#000;
}
.butBoxPro{
  margin-top:60rpx;
}
.butBoxPro .butPro{
  height:100rpx;
  line-height:100rpx;
  color:#fff;
  border-radius: 50rpx;
  background: #04b8a0;
}