<!--pages/affirm/affirm.wxml-->
<view class="wrap">
   <view class="header">
      <view>
         <text class="title">亲盒配送</text>
         <text class="iconfont icon-wenhao"></text>
      </view>
      <view class="headText">为确保您的衣盒体验，请确认您的信息</view>
   </view>
   <view class="content">
      <view class="con clearfix" bindtap="showUpdatePanelEvent">
          <view class="conLeft">
              <text class="iconfont icon-dingwei"></text>
          </view>
          <view class="conRight rightTop" bindtap="chooseAddress">
             <view class="conText">您的寄件地址
                 <text>收件地址</text>
             </view>
             <view class="info">选择地址便于顺丰人员上门取件</view>
             <text class='iconfont icon-arrow-right-copy'></text>
          </view>
      </view>
       <view class="con clearfix">
          <view class="conLeft">
              <text class="iconfont  icon-solid-time"></text>
          </view>
          <view class="conRight rightTop">
             <view class="conText">配送时间
                 <text></text>
             </view>
             <view class="info">
                  <picker mode="date" value="{{date}}" start="2015-09-01" bindchange="bindDateChange">
                  <input class="weui-input size-15" value='{{date}}' disabled="true" placeholder="请选择时间"/>
                </picker>
             </view>
             <text class='iconfont icon-arrow-right-copy'></text>
          </view>
      </view>
       <!-- <view class="con clearfix">
          <view class="conLeft">
              <text class="iconfont icon-solid-time"></text>
          </view>
          <view class="conRight rightTop">
             <view class="conText action">
             <view class="acLeft">配送时间</view>
                 <view> 
                 <picker mode="date" value="{{date}}" start="2015-09-01" bindchange="bindDateChange">
                  <input class="weui-input size-15" value='{{date}}' disabled="true" placeholder="请输入时间"/>
                </picker>
                </view>
             </view>
          
             <text class='iconfont icon-arrow-right-copy'></text>
          </view>
      </view> -->
       <view class="con clearfix" bindtap="goBody">
          <view class="conLeft">
              <text class="iconfont icon-lingdang"></text>
          </view>
          <view class="conRight">
             <view class="conText action">明确需求
                 <text>选填...</text>
             </view>
             <text class='iconfont icon-arrow-right-copy'></text>
          </view>
      </view>
   </view>
   <view class="footer">
       <view class="textBox">
          <textarea rows="5" placeholder='添加备注（限40字之内）'></textarea>
        </view>
        <view class="butBox">
           <button class="but" bindtap="inTrue">确认预约</button>
        </view>
   </view>
   <!-- 选择寄件地址上拉页面 -->
   <!-- <view class="updatePwanel" style="background:#ffffff;height:100vh" animation="{{updatePanelAnimationData}}">
      <view class="list" wx:for="{{}}"></view>
   </view> -->

   <!-- 确认预约点击底部弹窗 -->
   <view class="mark" bindtap="inMark"  hidden="{{!markIndex}}"></view>
   <view class="payBox" hidden="{{!hidIndex}}">
       <view class="payTop">
           <view class="left"><text>体验券</text>（邀请体验）</view>
           <view class="right">-￥28<text class="iconfont icon-arrow-right-copy"></text></view>
       </view>
       <view class="pay">
          <view class="paySon clearfix">
             <view class="left">搭配服务费（会员免费）<text class="iconfont icon-wenhao"></text></view>
             <view class="right">￥29.00</view>
          </view>
          <view class="paySon clearfix">
             <view class="left">顺丰配送费（会员免费）</view>
             <view class="right">￥0.00</view>
          </view>
       </view>
       <view class="payBot clearfix">
          <view class="left">实付金额</view>
          <view class="right">￥<text>1.00</text></view>
       </view>
       <view class="butBoxPro" bindtap="goGift">
          <button class="butPro">支付订单</button>
       </view>
   </view>
</view>

