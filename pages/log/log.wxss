.all {
  background-color: #008472;
  height: 100%;
  position: fixed;
}

/*上半部分*/
.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  text-align: center;
}

.image {
  padding:120rpx 0 30rpx 0;
}

.img-diy {
  width: 144rpx;
  height: 144rpx;
}

.title {
 font-size: 40rpx;
 font-weight: regular;
 color: #FFFFFF;
 padding: 60rpx 0;
 letter-spacing: 2rpx;
}

.intro {
  font-size: 28rpx;
  font-weight: Chance;
  color: #FFFFFF;
  letter-spacing: 4rpx;
  line-height: 60rpx;
}

/*下半部分*/
.bottom-button {
 display: flex;
 flex-direction: column;
}

.repair-one {
  padding-top: 110rpx;
}

.repair-two {
   padding-top: 26rpx;
}

.button-one {
  background-color: #D6BCBA;
  color: #FFFFFF;
}

.button-two {
  background-color: #F2F2F2;
  color: #999999;
}

.button-one, .button-two {
  height: 120rpx;
  line-height:120rpx;
  letter-spacing: 10rpx;
  font-size: 36rpx;
  border-radius: 20rpx;
  width: 86%;
}