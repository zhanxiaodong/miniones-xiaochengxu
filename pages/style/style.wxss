    padding: 80rpx 60rpx;
}

.title-first {
    font-size:50rpx;
    color:#323232;
    font-weight: bold;
}

.title-intro {
    font-size:28rpx;
    color:#999999;
    font-weight:regular;
    margin-top:26rpx;
}
.title-last {
    height:76rpx;
    background-color:#F2F2F2;
    border-radius:40rpx;
    margin-top:50rpx;
    display: flex;
    align-items: center;
}

.text {
    padding-left: 40rpx;
}

.content {
  padding: 0 60rpx;
  height: 1400rpx;
}

.every {
    float:left;
    width:50%;
    box-sizing:border-box;
    color:#999;
    margin-bottom:50rpx;

}

.check-first view.active {
    width:260rpx;
    color:#FFFFFF;
    text-align:center;
    margin-left: 28rpx;
}

