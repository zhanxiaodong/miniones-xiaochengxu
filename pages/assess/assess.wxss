/* pages/assess/assess.wxss */
.wrap{
  padding-left:40rpx;
}
.header{
  width:100%;
  height:15vh;
  border-bottom:solid 1px #f3f3f3;
}
.title{
  font-size:50rpx;
  font-weight: 600;
}
.explain{
  height:80rpx;
  line-height: 80rpx;
  font-size:30rpx;
  color:#c3c3c3;
}
.content{
  padding:50rpx 0;
  border-bottom:solid 1px #f3f3f3;
}
.con{
  line-height: 60rpx;
}
.con .action{
  color:#c3c3c3;
  font-size:30rpx;
}
.iconBox .icon-xingxing{
  font-size:60rpx;
  margin-left:10rpx;
  color:#04b8a0;

}

.choice{
  height:120rpx;
  padding:40rpx 0;
}
.choiceLeft{
  width:70%;
  float:left;
  font-size:30rpx;
}
.leftBot{
  font-size:24rpx;
  color:#c3c3c3;
  line-height: 50rpx;
}
.choiceRight{
  width:30%;
  float:left;
  text-align: right;
  padding-right:15rpx;
}
.butBox{
  width:100%;
  height:100rpx;
  margin-top:80rpx;
  padding-right:30rpx;
}
.but{
  background: #26aea8;
  height:100%;
  border-radius: 50rpx;
  line-height: 100rpx;
  color:#fff;
}