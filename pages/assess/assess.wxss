/* pages/assess/assess.wxss */
.wrap{
  padding: 40rpx;
}
.header{
  width:100%;
  height:15vh;
  border-bottom:solid 1px #f3f3f3;
}
.title{
  font-size:60rpx;
  font-weight: 600;
}
.explain{
  height:80rpx;
  line-height: 80rpx;
  font-size:24rpx;
  color:#c3c3c3;
}
.score {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.content{
  padding:50rpx 0 35rpx;
  border-bottom:solid 1px #f3f3f3;
}
.con{
  line-height: 60rpx;
}
.con .action{
 font-size: 24rpx;
  color: #999999;
}
.iconBox .icon-xingxing{
  font-size:60rpx;
  margin-left:10rpx;
  color:#04b8a0;

}

.choice{
  height:120rpx;

}
.choiceLeft{
  width:70%;
  float:left;
  font-size:30rpx;
}
.leftBot{
  font-size:24rpx;
  color:#c3c3c3;
  line-height: 50rpx;
}
.choiceRight{
  width:30%;
  float:left;
  text-align: right;
  padding-right:15rpx;
}
.butBox{
  width:100%;
  height:100rpx;
  bottom: 50rpx;
  position: fixed;
}
.but{
  background: #26aea8;
  height:100%;
  width: 83%;
  border-radius: 50rpx;
  line-height: 100rpx;
  color:#fff;
  z-index: 222;
  font-size:36rpx;
  font-weight:bold;
}

.star {
  color: black;
}

.star-title {
 display: flex;
 flex-direction: row;
 margin: 50rpx 0 60rpx;
}

.star-content {
  margin-right: 100rpx;
}

.starsHas {
  
}

.checkbox-group {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}

.checkbox-group label {
  display: block;
  width: 80px;
  
  border: 1rpx solid #999999;
  color: #999999;
  text-align: center;
  font-size: 28rpx;
  position: relative;
  line-height: 30px;
  margin-bottom: 30rpx;
  border-radius: 80rpx;
  flex-basis: 170rpx;
}

.checkbox-group label checkbox {
  opacity: 0;
  width: 40px;
  height: 30px;
  position: absolute;
  top: 0;
}

.checkbox-group label.checked {
  background: #26aea8;
  color: #fff;
}

.star-title image {
  width: 72rpx;
  height: 72rpx;
  padding-right: 18rpx;
}

.choiceLeft {
  padding-bottom: 40rpx;
}

.choice {
  padding-top: 60rpx;
}