page {
  height: 100%;
  background-color: #fff;
}

.cashn {
  text-decoration: line-through;
  text-decoration-color: #666;
}

.topinfo .topinfo-title {
  text-align: center;
  font-weight: bold;
  font-size: 36rpx;
}

.topinfo .topinfo-desc {
  font-size: 28rpx;
  padding: 20rpx 0;
}

.share-info {
  justify-content: center;
  display: flex;
  align-items: center;
  text-align: center;
  background-color: #26aea8;
  color: #fff;
}

.btn_text_green_cont {
  color: #fff;
  background-color: #26aea8;
  margin: none;
}
.btn_con {
  color: #fff;
  background-color: #26aea8;
  border-radius: 30px;
  width: 100px;
  font-size: 28rpx;
}
.share-info-img {
  padding-left: 20rpx;
}

.checklabel {
  padding: 10px 0;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 100%;
  border-bottom: 1px dashed #e4e4e4;
}

.goods-list-all {
  padding: 30rpx 0;
  border-bottom: 1px dashed #e4e4e4;
}

.goods-list-total {
  padding: 30rpx 0;
  border-bottom: 1px solid #e4e4e4;
}

.goods-badge {
  padding-bottom: 100rpx;
  background-color: #666;
}

.goods-discount {
  padding: 40rpx 0;
  font-size: 14px;
}

/*使屏幕变暗  */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.8;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.weui-grids {
  position: relative;
  overflow: hidden;
  border-top: 1px solid #f2f2f2;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 20rpx 10rpx;
  width: 33.33333333%;
  box-sizing: border-box;
  text-align: center;
  border-right: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
}

.rechargeGroup .active {
  background-color: #26aea8;
  color: #fff;
}

.inputView {
  border-radius: 40px;
  margin-left: 15px;
  background-color: #f2f2f2;
  flex: 1;
}

.weui-cell__ft_in-access {
  padding-right: 13px;
  position: relative;
}

.weui-cell__ft_in-access:after {
  content: " ";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 2px 2px 0 0;
  border-color: #c8c8cd;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -.71, 0.71, 0, 0);
  position: relative;
  top: -2px;
  position: absolute;
  top: 50%;
  margin-top: -4px;
  right: 2px;
}

.badgecs {
  background-color: red;
  border-radius: 15px;
  text-align: center;
  color: #fff;
  font-size: 10px;
  margin-top: 3px;
  padding: 0 5px;
}
